<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Stylist</title>
  </head>
  <body>
    <h2>Here are all the clients for this Stylist.</h2>

    @if (@Model["clients"].Count == 0)
    {
      <p>No Clients have been Added Yet.</p>
    }
    else
    {
      <ol>
        @foreach (var client in @Model["clients"])
        {
          <li>@client.GetName()</li>
        }
      </ol>
    }
    <p><a href="/clients/new">Add another Client</a></p>
    <p><a href="/">Home</a>

  </body>
</html>
