<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Clients</title>
  </head>
  <body>
    @if (Model.Count == 0)
    {
      <p>No Clients have been added yet!</p>
    }
    else
    {
      <h1>Here is a list of the Salons Clients;</h1>
      <ul>
        @foreach (var client in Model)
        {
          <li>@client.GetName()</li>
        }
      </ul>
      <form action="clientss/delete" method="post">
        <button type="submit">Clear All Clients</button>
      </form>
    }
    <p><a href="/clients/new">Add a New Client</a></p>
    <p><a href="/">Return Home</a></p>

  </body>
</html>
