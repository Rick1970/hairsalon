<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Stylist</title>
  </head>
  <body>
    <h1>All Stylist</h1>
    @if (@Model.Count == 0)
    {
      <p>There are no Stylist yet.</p>
    }
    <ul>
  @if (Model.Count != 0)
  {
    @foreach (var stylist in Model)
    {
      <li><a href="/stylist/@stylist.GetId()">@stylist.GetName()</a> | <a href="/stylist/edit/@stylist.GetId()">Edit</a></li>
    }
  }
</ul>


    <a href="/stylist/new">Add New Stylist</a>
    <form action="/stylist/clear" method="post">
  <button type="submit">Clear all Stylist</button>
</form>

  </body>
</html>
